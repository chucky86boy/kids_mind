<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/doctor_instruction_img_desc"
        android:src="@drawable/btn_doctor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10px"
        android:background="@drawable/btn_doctor_balloon"
        android:text="@string/click_to_consult"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
        tools:ignore="PxUsage" />
    
    <com.example.kids_mind.view.PagerContainer
        android:id="@+id/pager_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <android.support.v4.view.ViewPager
            android:id="@+id/menu_pager"
            android:layout_width="230dp"
        	android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />
    </com.example.kids_mind.view.PagerContainer>

</LinearLayout>