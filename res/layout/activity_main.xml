<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical" >
 <FrameLayout
        
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
      <LinearLayout
          android:id="@+id/linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_00"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/navi_bar"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/menuToggler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/navi_btn01" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:src="@drawable/logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/mapbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:background="@drawable/btn_pin" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/mainBody"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <FrameLayout
            android:id="@+id/fragmentHolder"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/info"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/black"
            android:orientation="horizontal" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sideMenu"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_tab"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="invisible"
            tools:ignore="PxUsage" >

            <ScrollView
                android:id="@+id/scrollView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" 
                android:scrollbars="none">
				
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical" >
		
                      <FrameLayout
       
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
      
                        android:gravity="center_vertical" >
                    <LinearLayout
                         android:id="@+id/loginframe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                           android:background="@drawable/bg_tab2"
                       android:gravity="center"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/mypage"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_weight="1"
                            android:src="@drawable/icon_my" />
					<LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                       android:gravity="center_vertical"
                        android:orientation="vertical" >
                        <TextView
                            
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                          
                            android:text="Hello"
                            android:textColor="#ffffffff" />
                          <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            
                            android:text="kidsmind"
                            android:textColor="#ffffffff" />

                      </LinearLayout>
                    </LinearLayout>
                    
                    
                      <LinearLayout
                           android:id="@+id/logined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                           android:background="@drawable/bg_tab2_login"
                       android:gravity="bottom|right"
                        android:orientation="horizontal" >

                        <Button
                            android:id="@+id/loginbtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                          	android:layout_marginBottom="5dp"
                            android:background="@drawable/login" />
					
                    </LinearLayout>
</FrameLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                     android:layout_height="150dp"
      
                        android:gravity="center"
                        android:orientation="vertical" >
   <FrameLayout
       
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">
      	
                        <ImageView
                            android:id="@+id/myalbum"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            
                            
                           />
                        <ImageView
                            android:id="@+id/mask"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/tab_mask"
                            
                           />
                        
                        </FrameLayout>
                          <ImageView
                        android:layout_width="wrap_content"
                         android:layout_height="0dp"
        android:layout_weight="1"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="12dp"
                        android:layout_marginTop="12dp"
                        android:src="@drawable/line_tab" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        
                     >

                        <ListView
                            android:id="@+id/listView1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
      				  android:layout_weight="3"
                            android:scrollbars="none"
                            android:transcriptMode="disabled">
                        </ListView>
                    </LinearLayout>
  <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
      				  android:layout_weight="3"
                        android:gravity="center"
                        android:orientation="vertical"
                        
                        android:paddingTop="5dp" >
                    <Button
                        android:id="@+id/add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                       
                        android:background="@drawable/add_baby" />

                    <TextView
                        android:id="@+id/addtext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="아이 등록하기"
                        android:textColor="#ff000000" />

                    <Button
                        android:id="@+id/notic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:visibility="gone"
                        android:background="@drawable/notice" />

                    <Button
                        android:id="@+id/setting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/tab_btn" />
                      <Button
                        android:id="@+id/logout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/logout" />
                      </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    
        
    </FrameLayout>
        
</LinearLayout>
<LinearLayout
            android:id="@+id/infoview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/note_popup_01"
    android:gravity="bottom|center_horizontal"
    android:orientation="vertical" >

    <Button
        android:id="@+id/infobutton"
        android:layout_width="26dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        
        android:background="@drawable/btn_note_next" />

</LinearLayout>
<com.facebook.widget.LoginButton
        android:id="@+id/authButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:visibility="invisible"
        android:text="LoginButton" />
</FrameLayout>
    
</LinearLayout>