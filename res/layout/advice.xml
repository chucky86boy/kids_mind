<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/bg_00"
    android:divider="#00000000"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/navi_bar"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/back2" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="그림 전송하기"
             android:textColor="#ffffffff"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right" >
   <Button
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/home"
            
            />

        </LinearLayout>
    </LinearLayout>

 <LinearLayout
     android:id="@+id/morebutton"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:gravity="right"
     android:orientation="vertical" >

                    <Button
                        android:id="@+id/more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/moreadvice" />
                </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
         >
   <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
         
             android:layout_weight="3.3"
            android:orientation="horizontal"
          	android:paddingLeft="20dp"
          	android:paddingRight="20dp"
             >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_height="match_parent"
            
           
            android:background="@drawable/box_select"
            android:orientation="horizontal"
            android:padding="5dp" >

            <LinearLayout
                android:id="@+id/set"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/box_sketch"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_fish" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                  android:text="Title"
                    android:textColor="#ff000000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="Date"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/box_sketch"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                     android:layout_margin="2dp" />
            </LinearLayout>
        </LinearLayout>
</LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
        	 android:layout_height="0dp"
           
            android:layout_weight="5"
            >

            

            <ListView android:id="@+id/listView1" android:layout_width="match_parent" android:layout_height="wrap_content"
               	android:divider="#00000000"
                 android:paddingLeft="10dp"
            android:paddingRight="10dp">
            </ListView>
            <LinearLayout
        android:id="@+id/bottom_write_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="bottom"
       >
<LinearLayout
    android:layout_width="match_parent"
    android:background="@drawable/bg_box_text"
    android:gravity="center"
        android:layout_height="wrap_content"
         android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
          	
         >
        <EditText
            android:id="@+id/text"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="15sp"
          	android:hint="그림그리면서 특이했던 행동이나 결과에 궁금하신점을  작성해 주세요"
            android:background="@drawable/box_text"
           
          
           />
<LinearLayout
    android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
        android:gravity="bottom"
          >
        <Button
             android:id="@+id/trans"
            android:layout_width="match_parent"
      
            android:layout_height="wrap_content"
           
            android:background="@drawable/sendbtn"
          
         
          
           />
</LinearLayout>
      </LinearLayout>
      
          
      

    </LinearLayout>
            
